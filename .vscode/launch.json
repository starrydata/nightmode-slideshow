    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            // src/app.pyを実行したい
            "program": "${workspaceFolder}/src/main.py",
            // 引数にbatteryを渡す
            "args": ["battery"],
            "console": "integratedTerminal"
        }
    ]
}
