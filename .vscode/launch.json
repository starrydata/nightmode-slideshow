    "version": "0.2.0",
    "configurations": [
        {
            "name": "battery",
            "type": "debugpy",
            "request": "launch",
            // src/app.pyを実行したい
            "program": "${workspaceFolder}/src/slideshow_app.py",
            // 引数にbatteryを渡す
            "args": ["battery"],
            "console": "integratedTerminal",
            "python": "${workspaceFolder}/.venv/bin/python"
        },
        {
            "name": "thermoelectric",
            "type": "debugpy",
            "request": "launch",
            // src/app.pyを実行したい
            "program": "${workspaceFolder}/src/slideshow_app.py",
            // 引数にbatteryを渡す
            "args": ["thermoelectric"],
            "console": "integratedTerminal",
            "python": "${workspaceFolder}/.venv/bin/python"
        },
        // stremaliteのデバッグ用
        {
            "name": "streamlit",
            "type": "python",
            "request": "launch",
            "module": "streamlit",
            "args": [
                "run",
                "${workspaceFolder}/src/home.py",
            ],
            "env": {
                "BASE_DATA_URI": "https://starrydata.github.io/cleansing-dataset/v1",
                "HIGHLIGHT_DATA_URI": "https://www.starrydata2.org/paperlist/xy_data_api",
                "PYTHONPATH": "${workspaceFolder}/src/",
            },
            "python": "${workspaceFolder}/.venv/bin/python"
        }
    ]
}
